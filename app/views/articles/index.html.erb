<h1>Resources & Tools</h1>

<table class="table table-hover table-condensed">
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="thumbnail">
          <%= image_tag article.image.url %>
        </td>
        <td >
          <%= link_to article.caption, article, class: "caption" %><br>
          <%= article.opener %><br><br>
          <%= link_to "read more >>", article %>
        </td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>





